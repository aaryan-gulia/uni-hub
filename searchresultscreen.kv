
<SearchResultscreen>:
  canvas:
    Rectangle:
      size: self.size
      pos: self.pos
      source: "pictures/greenbg.png"

  GridLayout:
    cols:3
    rows:1
    pos_hint:{'top':1.0,'right':1.0}
    size_hint:1.0,0.13
    Button:
      id:menu
      name:"menu"
      background_normal:"pictures/menuicon1.png"
      background_down:"pictures/menuicon1.png"
      size_hint:0.27,0.1

    Button:
      id:back_home
      name:"back_home"
      background_normal:"pictures/logo1.png"
      background_down:"pictures/logo1.png"
      on_release:
        app.change_screen("home_screen")

    Button:
      id:settings
      name:"settings"
      background_normal:"pictures/profile.png"
      background_down:"pictures/profile.png"
      size_hint:0.27,0.2

  ScrollView:
    do_scroll_x:False
    do_scroll_y:True
    pos_hint:{'top':0.8,'right':1.0}
    size_hint:1.0,0.6
    GridLayout:
      cols:1
      id:scroll_gridlayout
      size_hint_x:root.size_hint_x
      spacing:10

  FloatLayout:
    Button:
      text:"Show Activities"
      font_size:30
      size_hint:0.4,0.1
      pos_hint:{'top':0.2,'right':0.7}
      color:(0,0,0)
      background_normal:"pictures/bgtexture1.jpg"
      background_down:"pictures/bgtexture1.jpg"
      on_release:
        root.CreateButtons()
