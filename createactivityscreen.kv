<CreateActivityScreen>:
  canvas:
    Rectangle:
      size: self.size
      pos: self.pos
      source: "pictures/greenbg.png"

  GridLayout:
    cols:3
    rows:1
    pos_hint:{'top':1.0,'right':1.0}
    size_hint:1.0,0.13
    Button:
      id:menu
      name:"menu"
      background_normal:"pictures/menuicon1.png"
      background_down:"pictures/menuicon1.png"
      size_hint:0.27,0.1

    Button:
      id:back_home
      name:"back_home"
      background_normal:"pictures/logo1.png"
      background_down:"pictures/logo1.png"

    Button:
      id:settings
      name:"settings"
      background_normal:"pictures/profile.png"
      background_down:"pictures/profile.png"
      size_hint:0.27,0.2

  FloatLayout:
    Label:
      text:"[u][b]Create New Activity[/b][/u]"
      markup:True
      font_size:60
      color:(0,0,0)
      pos_hint:{"top": 1.3, "right": 1.0}

    TextInput:
      id:activity_name
      hint_text:"Activity Name"
      size_hint:0.8,0.07
      pos_hint:{"top": 0.75, "right": 0.9}
      color:(0,0,0,1)
      multiline: False

    GridLayout:
      cols:2
      spacing:50
      pos_hint:{"top": 0.65, "right": 0.3}
      size_hint:0.15,0.08
      CheckBox:
        active:False
        id:checkbox_remote
        color:(0,0,0,1)
      Label:
        text:"Remote"
        color:(0,0,0)
      CheckBox:
        active:False
        id:checkbox_inperson
        color:(0,0,0,1)
      Label:
        text:"  In Person"
        color:(0,0,0)

    GridLayout:
      cols:2
      rows:1
      spacing:10
      pos_hint:{'top':0.52,"right":0.9}
      size_hint:0.8,0.07
      TextInput:
        id:activity_date
        hint_text:"Date"
        color:(0,0,0,1)
        multiline: False
      TextInput:
        id:activity_time
        hint_text:"start time - end time / timezone"
        color:(0,0,0,1)
        multiline: True

    TextInput:
      id:activity_location
      hint_text:"Activity Location"
      size_hint:0.8,0.07
      pos_hint:{"top": 0.42, "right": 0.9}
      color:(0,0,0,1)
      multiline: True

    TextInput:
      id:activity_discription
      hint_text:"Activity discription"
      size_hint:0.8,0.07
      pos_hint:{"top": 0.32, "right": 0.9}
      color:(0,0,0,1)
      multiline: True

    Button:
      id:submit
      text:"Submit"
      pos_hint:{"top":0.22,"right": 0.7}
      size_hint:0.4,0.1
      font_size:40
      color:(0,0,0)
      background_normal:"pictures/bgtexture1.jpg"
      background_down:"pictures/bgtexture1.jpg"
