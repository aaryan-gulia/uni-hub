<LoginScreen>:
  canvas:
    Rectangle:
      size: self.size
      pos: self.pos
      source: "pictures/bgtexture1.jpg"

  FloatLayout:
    TextInput:
      id:login_email
      hint_text:"email"
      size_hint:0.8,0.07
      pos_hint:{"top": 0.8, "right": 0.9}
      color:(0,0,0,1)
      font_size: 40
      multiline: False

    TextInput:
      id:login_password
      password: True
      hint_text:"password"
      size_hint:0.8,0.07
      pos_hint:{"top": 0.65, "right": 0.9}
      color:(0,0,0,1)
      font_size: 40
      multiline: False

    Label:
      id: login_message
      color: (1,0,0)

    Button:
      text: "Sign In"
      id:login_button
      font_size: 30
      background_color:(0,0,0,0.8)
      size_hint: 0.4,0.07
      pos_hint:{"top": 0.4, "right": 0.7}
      source: "pictures/bgtexture2.jpg"
      on_release:
        app.firebase.signin(login_email.text, login_password.text)

    Button:
      text: "Sign Up"
      id:login_button
      font_size: 30
      background_color:(0,0,0,0.8)
      size_hint: 0.4,0.07
      pos_hint:{"top": 0.3, "right": 0.7}
      on_release:
        app.firebase.signup(login_email.text, login_password.text)
